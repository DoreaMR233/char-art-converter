# WebP处理服务环境配置模版

# 时区设置
TIMEZONE=Asia/Shanghai

# 服务端口
PORT=8081

# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=/app/logs/webp-processor.log

# 临时文件保留时间（秒）
TEMP_FILE_TTL=3600
TEMP_DIR=/app/data

# 调试模式
DEBUG=False

# 最大上传文件大小（字节）- 10MB，与后端一致
MAX_CONTENT_LENGTH=10485760

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 进度相关
PROGRESS_UPDATE_INTERVAL=0.5

# Java后端服务URL
JAVA_BACKEND_URL=http://localhost:8080
